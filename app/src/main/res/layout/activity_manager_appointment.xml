<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ManagerCalenderAppointment">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="340dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/barberphoto" />


    <EditText
        android:id="@+id/time_layout_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24sp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="20dp"
        android:height="48dp"
        android:alpha="0.6"
        android:background="@color/teal_200"
        android:focusableInTouchMode="false"
        android:hint="Select Start Date and Time"
        android:inputType="none"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        app:layout_constraintEnd_toEndOf="@id/time_layout_date_end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/time_layout_date_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="20dp"
        android:alpha="0.6"
        android:background="@color/purple_200"
        android:focusableInTouchMode="false"
        android:hint="Select End Date and Time"
        android:inputType="none"
        android:minHeight="48dp"
        android:textSize="24sp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="@+id/time_layout_date"
        app:layout_constraintHorizontal_bias="0.857"
        app:layout_constraintStart_toStartOf="@+id/time_layout_date"
        app:layout_constraintTop_toTopOf="@id/time_layout_date" />

    <TextView
        android:id="@+id/End"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="80dp"
        android:layout_marginTop="28dp"
        android:width="24dp"
        android:height="24dp"
        android:background="@drawable/selection_band_overlay"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Start" />

    <TextView
        android:id="@+id/Start"
        android:layout_width="253dp"
        android:layout_height="25dp"
        android:layout_marginHorizontal="80dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="88dp"
        android:width="24dp"
        android:height="24dp"
        android:background="@drawable/selection_band_overlay"
        android:gravity="center"
        app:cornerRadius="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_layout_date_end" />

    <Button
        android:id="@+id/SendTimesBtn"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50sp"
        android:layout_marginTop="548dp"
        android:layout_marginRight="50sp"
        android:alpha="0.8"
        android:backgroundTint="@color/black"
        android:hint="@android:string/ok"
        android:padding="12dp"
        android:text="@android:string/ok"

        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />


</androidx.constraintlayout.widget.ConstraintLayout>
